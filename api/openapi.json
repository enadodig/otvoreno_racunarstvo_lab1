{
  "openapi": "3.0.3",
  "info": {
    "title": "Skup glazbenih žanrova API",
    "description": "API za upravljanje glazbenim žanrovima",
    "version": "1.0.0",
    "contact": {
      "name": "Ena Dodig",
      "email": "ena.dodig@fer.hr"
    },
    "license": {
      "name": "CC BY-SA 4.0 GFDL"
    }
  },
  "paths": {
    "/api/genres": {  
      "get": {
        "summary": "Dohvati sve žanrove",
        "description": "Vraća listu svih glazbenih žanrova",
        "responses": {
          "200": {
            "description": "Uspješno dohvaćeni žanrovi",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Genre"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Kreiraj novi žanr",
        "description": "Dodaje novi glazbeni žanr u kolekciju",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GenreInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Žanr uspješno kreiran"
          },
          "400": {
            "description": "Neispravni podaci"
          }
        }
      }
    },
    "/api/genres/{id}": {
      "get": {
        "summary": "Dohvati žanr po ID-u",
        "description": "Vraća pojedinačni žanr na temelju identifikatora",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID žanra",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Uspješno dohvaćen žanr"
          },
          "404": {
            "description": "Žanr nije pronađen"
          }
        }
      },
      "put": {
        "summary": "Ažuriraj žanr",
        "description": "Ažurira postojeći žanr",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID žanra za ažuriranje",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GenreInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Žanr uspješno ažuriran"
          },
          "404": {
            "description": "Žanr nije pronađen"
          }
        }
      },
      "delete": {
        "summary": "Obriši žanr",
        "description": "Briše žanr iz kolekcije",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID žanra za brisanje",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Žanr uspješno obrisan"
          },
          "404": {
            "description": "Žanr nije pronađen"
          }
        }
      }
    },
    "/api/genres/era/{era}": {
      "get": {
        "summary": "Dohvati žanrove po eri",
        "description": "Vraća žanrove iz određenog razdoblja",
        "parameters": [
          {
            "name": "era",
            "in": "path",
            "required": true,
            "description": "Era (npr. 1950s, 1960s)",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Uspješno dohvaćeni žanrovi"
          }
        }
      }
    },
    "/api/genres/country/{country}": {
      "get": {
        "summary": "Dohvati žanrove po državi",
        "description": "Vraća žanrove iz određene države",
        "parameters": [
          {
            "name": "country",
            "in": "path",
            "required": true,
            "description": "Država (npr. USA, UK)",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Uspješno dohvaćeni žanrovi"
          }
        }
      }
    },
    "/api/genres/artist/{artist}": {
      "get": {
        "summary": "Dohvati žanrove po izvođaču",
        "description": "Vraća žanrove povezane s određenim izvođačem",
        "parameters": [
          {
            "name": "artist",
            "in": "path",
            "required": true,
            "description": "Ime izvođača",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Uspješno dohvaćeni žanrovi"
          }
        }
      }
    },
    "/openapi.json": {
      "get": {
        "summary": "OpenAPI specifikacija",
        "description": "Vraća OpenAPI specifikaciju API-ja",
        "responses": {
          "200": {
            "description": "Uspješno dohvaćena specifikacija"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Genre": {
        "type": "object",
        "properties": {
          "genre_id": {
            "type": "integer",
            "description": "Jedinstveni identifikator žanra"
          },
          "name": {
            "type": "string",
            "description": "Naziv žanra"
          },
          "era_of_origin": {
            "type": "string",
            "description": "Era nastanka"
          },
          "years_active": {
            "type": "string",
            "description": "Godine aktivnosti"
          },
          "artist": {
            "type": "string",
            "description": "Predstavnički izvođač"
          },
          "top_ranked_album": {
            "type": "string",
            "description": "Najbolje rangirani album"
          },
          "origin_country": {
            "type": "string",
            "description": "Zemlja porijekla"
          },
          "main_instruments": {
            "type": "string",
            "description": "Glavni instrumenti"
          },
          "typical_bpm_range": {
            "type": "string",
            "description": "Tipični BPM raspon"
          },
          "vocal_style": {
            "type": "string",
            "description": "Vokalni stil"
          },
          "subgenres": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Subgenre"
            },
            "description": "Lista subgenrea"
          }
        }
      },
      "Subgenre": {
        "type": "object",
        "properties": {
          "subgenre_id": {
            "type": "integer"
          },
          "subgenre_name": {
            "type": "string"
          }
        }
      },
      "GenreInput": {
        "type": "object",
        "required": ["name", "artist", "era_of_origin", "years_active"],
        "properties": {
          "name": {
            "type": "string"
          },
          "artist": {
            "type": "string"
          },
          "era_of_origin": {
            "type": "string"
          },
          "years_active": {
            "type": "string"
          },
          "top_ranked_album": {
            "type": "string"
          },
          "origin_country": {
            "type": "string"
          },
          "main_instruments": {
            "type": "string"
          },
          "typical_bpm_range": {
            "type": "string"
          },
          "vocal_style": {
            "type": "string"
          },
          "subgenres": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Subgenre"
            }
          }
        }
      }
    }
  }
}